<!-- IF S_CAN_USE_REACTIONS -->
<div class="reactions-container" data-post-id="{POST_ID}">
    <div class="reactions-list">
        <!-- BEGIN reactions -->
        <button class="reaction-btn {reactions.IS_USER}reaction-user" 
                data-reaction="{reactions.UNICODE}"
                title="{reactions.NAME}">
            <span class="reaction-emoji">{reactions.UNICODE}</span>
            <span class="reaction-count">{reactions.COUNT}</span>
        </button>
        <!-- END reactions -->
    </div>
</div>
<!-- ENDIF -->
